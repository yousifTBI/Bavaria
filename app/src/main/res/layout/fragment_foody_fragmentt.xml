<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodyFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout

                android:background="#05423F3F"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="500dp"
                    android:layout_height="55dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/red"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <TextView
                        android:id="@+id/totalBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:text="0.0"
                        android:textColor="#fff"
                        android:textSize="26dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:text="الاجمالى "
                        android:textColor="#fff"
                        android:textSize="26dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="74dp"
                        android:layout_height="61dp"
                        app:layout_constraintBottom_toTopOf="@+id/button2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:ignore="NotSibling" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/payBtn"
                    android:layout_width="150dp"
                    android:layout_height="62dp"

                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:gravity="center"
                    android:text="الإنتقال للدفع"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    app:layout_constraintEnd_toStartOf="@+id/cardView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:background="#fff"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    app:layout_constraintBottom_toTopOf="@+id/offers"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="130dp"
                        android:layout_height="62dp"

                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:gravity="center"
                        android:text="اضافات  "
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="130dp"
                        android:layout_height="62dp"

                        android:layout_marginEnd="16dp"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:gravity="center"
                        android:text="مشروبات "
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="130dp"
                        android:layout_height="62dp"


                        android:layout_marginEnd="30dp"
                        android:layout_weight="1"
                        android:background="@color/red"
                        android:gravity="center"
                        android:text="ماكولات "

                        android:textColor="@color/white"
                        android:textSize="22dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="699dp"
                    android:layout_height="213dp"
                    android:layout_marginEnd="4dp"
                    android:elevation="10dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/offers">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <TextView
                            android:id="@+id/CodeID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:text="TextView"
                            app:layout_constraintTop_toBottomOf="@+id/textView5"
                            tools:layout_editor_absoluteX="416dp"
                            tools:ignore="MissingConstraints" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="127dp"
                            android:layout_height="57dp"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="16dp"
                            android:background="#F32032"
                            android:text="الكميه"
                            android:textColor="#fff"
                            app:layout_constraintStart_toEndOf="@+id/Add"
                            app:layout_constraintTop_toBottomOf="@+id/textinput_cash" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textinput_deferred"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="124dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/deferredEditText"
                                android:layout_width="124dp"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:ems="10"
                                android:enabled="false"
                                android:hint="الاجمالى"
                                android:imeOptions="actionDone"

                                android:inputType="numberDecimal"
                                tools:text="0.0" />


                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textinput_cash"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="124dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintStart_toEndOf="@+id/textinput_deferred"
                            app:layout_constraintTop_toTopOf="parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/cashEditText"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                android:editable="false"
                                android:ems="10"
                                android:enabled="false"
                                android:hint="الكميه "
                                android:imeOptions="actionDone"
                                android:inputType="numberDecimal"
                                tools:text="1" />

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:text="  السعر :"
                            android:textSize="18dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView4" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginEnd="16dp"
                            android:text="  الاسم :"
                            android:textSize="18dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nameTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text=""
                            android:textSize="18dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView4"
                            app:layout_constraintEnd_toStartOf="@+id/textView4"
                            app:layout_constraintTop_toTopOf="@+id/textView4" />

                        <TextView
                            android:id="@+id/saleTv"
                            android:layout_width="wrap_content"
                            android:layout_height="27dp"
                            android:layout_marginEnd="16dp"
                            android:text=""
                            android:textSize="18dp"
                            app:layout_constraintBottom_toBottomOf="@+id/textView5"
                            app:layout_constraintEnd_toStartOf="@+id/textView5"
                            app:layout_constraintTop_toTopOf="@+id/textView5" />

                        <Button
                            android:id="@+id/Add"
                            android:layout_width="127dp"
                            android:layout_height="57dp"
                            android:layout_marginStart="50dp"
                            android:layout_marginTop="16dp"
                            android:background="#4AA80F"
                            android:text="اضافه للفاتوره"
                            android:textColor="#fff"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textinput_deferred" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/offers"
                    android:layout_width="712dp"
                    android:layout_height="283dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="75dp"
                    android:foregroundGravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:listitem="@layout/row_offers" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="550dp"
                    android:layout_height="440dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#0F636161"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints">

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="16dp"
                        tools:layout_editor_absoluteX="16dp" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/red"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent">

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="6dp"
                            android:gravity="center"
                            android:padding="6dp"
                            android:text="الفاتوره"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"


                        android:background="@color/red"
                        android:orientation="horizontal"
                        android:padding="4dp"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                        <TextView
                            android:id="@+id/textView24"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:text="الاجمالي"
                            android:textColor="@color/white"
                            tools:text="total" />

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0.3"

                            android:gravity="center"
                            android:text="العدد"
                            android:textColor="@color/white"
                            app:layout_constraintBottom_toBottomOf="parent"

                            tools:text="weight" />


                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0.3"
                            android:gravity="center"
                            android:text="الاسم"
                            android:textColor="@color/white"
                            tools:text="name" />

                    </LinearLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/categories"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="8dp"
                        android:nestedScrollingEnabled="true"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:listitem="@layout/row_category"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                    </androidx.recyclerview.widget.RecyclerView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</layout>